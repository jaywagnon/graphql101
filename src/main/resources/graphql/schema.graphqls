schema {
    query: Query
}

type Author {
    id: Int!
    name: String!
    books: [Book!]!
}

type Book {
    id: Int!
    name: String!
    author: Author!
}

type Query {
    "Simply returns 'true'."
    healthCheck: Boolean!

    getAuthors: [Author!]!
    getAuthorById(id: Int!): Author

    getBooks: [Book!]!
    getBookById(id: Int!): Book
}
