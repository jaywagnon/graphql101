schema {
    query: Query
}

enum Genre {
    ROMANCE,
    FICTION,
    FANTASY,
    SCI_FI
}

type Author {
    id: Int!
    name: String!
    books: [Book!]!
}

type Book {
    id: Int!
    name: String!
    genre: Genre!
    author: Author!
}

type Query {
    "Simply returns 'true'.  A no-op query to satisfy the minimum requirements for a GraphQL schema."
    healthCheck: Boolean!

    getAuthors: [Author!]!

    getBooks: [Book!]!
}
