schema {
    query: Query
}

type Author {
    id: Int!
    name: String!
}

type Book {
    id: Int!
    name: String!
}

type Query {
    "Simply returns 'true'."
    healthCheck: Boolean!

    getAuthors: [Author!]!
    getAuthorById(id: Int!): Author

    getBooks: [Book!]!
    getBookById(id: Int!): Book
}
